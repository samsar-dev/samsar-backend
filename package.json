{
  "name": "marketplace-backend",
  "version": "1.0.0",
  "description": "Marketplace application backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--import tsx' node --watch server.ts",
    "clean": "rimraf dist",
    "generate": "prisma generate --schema src/prisma/schema.prisma",
    "build": "npm run clean && npm run generate && tsc",
    "upload:favicon": "tsx scripts/uploadFavicon.ts",
    "start": "node --es-module-specifier-resolution=node dist/server.js",
    "db:push": "prisma db push --schema src/prisma/schema.prisma",
    "db:refresh": "npx prisma generate --schema src/prisma/schema.prisma && npx prisma db push --schema src/prisma/schema.prisma",
    "postinstall": "prisma generate && npm run build"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.758.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/error": "^4.1.0",
    "@fastify/etag": "^6.0.3",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/secure-session": "^8.2.0",
    "@fastify/static": "^8.1.1",
    "@prisma/client": "^6.8.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express-validator": "^6.15.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "form-data": "^4.0.4",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mailersend": "^2.6.0",
    "multi-part": "^4.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "resend": "^4.5.1",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.23",
    "@types/formidable": "^3.4.5",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.7",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.11.9",
    "ioredis": "^5.6.1",
    "prisma": "^6.8.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}

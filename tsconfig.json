{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "moduleDetection": "force"
  },
  "include": ["src/**/*", "server.ts", "types/*.d.ts", "schemas/villaSchema.ts", "schemas/storeSchema.ts", "validators/store.ts", "validators/villa.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

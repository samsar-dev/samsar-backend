# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
DATABASE_URL="your_database_url_here"
DATABASE_SSL=true

# Authentication
JWT_SECRET="your_jwt_secret_here"
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d
BCRYPT_SALT_ROUNDS=12

# CORS Configuration (Add all your frontend URLs, comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://samsar-frontend.vercel.app,https://samsar-frontend-production.up.railway.app

# Frontend URLs
FRONTEND_URL=https://samsar-frontend.vercel.app
PRODUCTION_FRONTEND_URL=https://samsar-frontend.vercel.app

# File Upload Configuration
CLOUDFLARE_R2_ACCESS_KEY=your_access_key
CLOUDFLARE_R2_SECRET_KEY=your_secret_key
CLOUDFLARE_R2_ENDPOINT=your_endpoint
CLOUDFLARE_R2_BUCKET=mywebsite-storage
CLOUDFLARE_R2_PUBLIC_URL=your_public_url

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=15m
AUTH_RATE_LIMIT_MAX_REQUESTS=10
AUTH_RATE_LIMIT_WINDOW=15m

# Email Configuration
EMAIL_FROM="Your App Name <noreply@example.com>"

 
